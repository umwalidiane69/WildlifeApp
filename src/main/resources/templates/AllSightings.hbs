{{#partial "content"}}
        <form action="/sighting/new" method="post">
            <div class="form-group">
                <label for="ranger">Ranger name</label><br>
                <input type="text"  placeholder="Enter Ranger name" name="name">
            </div>
            <div class="form-group">
                <select id="locat"   name="location" >
                        <option value="Zone A">Zone A</option>
                        <option value="Near the River">Near the River</option>
                        <option value="NE Quadrant">NE Quadrant</option>

                    </select>
            </div>
                   <div >
                            <button type="submit" class="btn btn-primary mb-2">Submit</button>
                        </div>
                    </form>
            {{/partial}}
            {{>layout.hbs}}